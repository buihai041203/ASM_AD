<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- USERNAME -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Username"
            android:textSize="22sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- CHI PHÍ BAN ĐẦU -->
        <TextView
            android:id="@+id/tvInitialBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi phí ban đầu: 0 đ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:padding="8dp" />

        <!-- TỔNG CHI & SỐ DƯ -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvTotalExpense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng chi tiêu: 0 đ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#D32F2F" />

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Số dư: 0 đ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#388E3C" />
        </LinearLayout>

        <!-- CHỌN THÁNG/NĂM CHO PIECHART -->
        <LinearLayout
            android:id="@+id/monthYearFilterLayout"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:weightSum="2">

            <Spinner
                android:id="@+id/spMonthPie"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spYearPie"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- PIE CHART -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="12dp" />

        <!-- TIÊU ĐỀ CHI TIÊU TRONG NGÀY -->
        <TextView
            android:id="@+id/tvDailyExpenseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiêu trong ngày"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="20dp" />

        <!-- CHỌN NGÀY (DƯỚI PIECHART) -->
        <LinearLayout
            android:id="@+id/dateFilterLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="8dp"
            android:weightSum="3">

            <Spinner
                android:id="@+id/spDay"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spMonth"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp" />

            <Spinner
                android:id="@+id/spYear"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- DANH SÁCH CHI TIÊU TRONG NGÀY -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDailyExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp" />

    </LinearLayout>

</ScrollView>
