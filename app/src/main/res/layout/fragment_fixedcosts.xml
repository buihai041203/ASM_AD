<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBF9"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Create New Budget"
            android:textColor="#2E7D32"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Budget Name:"
            android:textColor="#00695C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtFixedName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_input_mint"
            android:hint="Enter budget name"
            android:paddingHorizontal="16dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Amount:"
            android:textColor="#00695C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtFixedAmount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_input_mint"
            android:hint="Enter amount"
            android:inputType="numberDecimal"
            android:paddingHorizontal="16dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Description (optional):"
            android:textColor="#00695C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtFixedDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_input_mint"
            android:gravity="top"
            android:hint="Enter description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:padding="16dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnSaveFixed"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#3F51B5"
            android:text="SAVE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBackFixed"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#3F51B5"
            android:text="BACK"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>